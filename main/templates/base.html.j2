<!DOCTYPE html>
<html lang="{{ get_locale() }}" dir="{{ 'rtl' if get_locale() == 'ar' else 'ltr' }}">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}{{ _('Resume Project') }}{% endblock %}</title>

    <link rel="icon" href="{{ url_for('static', filename='favicon.ico') }}">

    {% block styles %}
    <link rel="stylesheet" href="{{ url_for('static', filename='css/resume.css') }}">
    {% endblock %}

    {% block head %}{% endblock %}
</head>
<body class="{{ settings_dict.get('theme_mode', 'light') }}" style="{{ body_font | default('font-family: Arial, sans-serif;') }}">

    {% include 'partials/navbar.html.j2' %}

    {% block sidebar %}{% endblock %}

    <main style="padding: 20px;">
        {% block content %}{% endblock %}
    </main>

    {% block footer %}
        {% include 'partials/footer.html.j2' %}
    {% endblock %}

    {% block scripts %}{% endblock %}
</body>
</html>
